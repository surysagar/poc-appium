{
    "version": "0.2.0",
    "configurations": [
        {
        "name": "Launch app",
        "type": "node",
        "request": "launch",
        "args": ["src/main.ts"],
        "runtimeArgs": ["-r", "ts-node/register", "-r","tsconfig-paths/register" ],
        "cwd": "${workspaceFolder}",
        "internalConsoleOptions": "openOnSessionStart",
        "env": {
            "NODE_ENV": "local"
        },
        "sourceMaps": true,
        "console": "internalConsole",
        "outputCapture": "std",
        "resolveSourceMapLocations": [
            "${workspaceFolder}/**",
            "!**/node_modules/**"
        ]   
        }
    ]
}